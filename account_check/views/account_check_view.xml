                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state"/>
                <field name="owner_name" invisible="context.get('default_type',False) not in ('third_check','deposit_promissory_check')"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

