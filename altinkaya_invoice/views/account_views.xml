<record id="altinkaya_invoice_form_hide_fields" model="ir.ui.view">
            <field name="model">account.move</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="17"/>
            <field name="name">altinkaya.invoice.form.hide.fields</field>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_title')]/h1" position="replace">
                    <h1 class="mt0">
                        <div>
                            <field name="name"
                                   placeholder="Leave blank for new number!" class="oe_inline"
                                   attrs="{'readonly': [('state','not in',('draft',))]}"/>
                        </div>
                    </h1>
                </xpath>

                <xpath expr="//page[@name='other_info']/group/group/field[@name='partner_bank_id']"
                       position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="added_filters" model="ir.ui.view">
            <field name="name">account.invoice.date.filters</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='late']" position="after">
                    <separator/>
                    <filter string="Last Week" name="lastweek"
                            domain="[('invoice_date','&gt;=',(context_today() + relativedelta(weeks=-2, days=1, weekday=0)).strftime('%Y-%m-%d 00:00:00')),
                                 ('invoice_date','&lt;',(context_today() + relativedelta(weeks=-1, weekday=5)).strftime('%Y-%m-%d 23:59:59'))]"/>
                    <filter string="Last Month" name="lastmonth"
                            domain="[('invoice_date','&gt;=',(context_today() + relativedelta(months=-1)).strftime('%Y-%m-01 00:00:00')),
                                 ('invoice_date','&lt;',context_today().strftime('%Y-%m-01 00:00:00'))]"/>
                    <filter string="Last Year" name="lastyear"
                            domain="[('invoice_date','&gt;=',(context_today() + relativedelta(years=-1)).strftime('%Y-01-01 00:00:00')),
                                 ('invoice_date','&lt;',context_today().strftime('%Y-01-01 00:00:00'))]"/>
                </xpath>
                <separator/>
            </field>
        </record>
